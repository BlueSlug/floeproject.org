        {% for post in posts %}
            {% include "partials/components/news-item.njk" %}
        {% endfor %}
    </ul>

    {% set paginationPreviousText = "Newer" %}
    {% set paginationNextText = "Older" %}
    {% include "partials/components/pagination.njk" %}
{% endblock %}
