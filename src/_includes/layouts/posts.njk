{% extends "layouts/base.njk" %}

{% block content %}
    <ul id="content" class="posts posts-{{ eleventyNavigation.key | lower }}">
        {% set posts = collections.all | eleventyNavigation(eleventyNavigation.key) %}
        {% for post in posts |sort(reverseSort, true, sortAttr) %}
            <li class="post corner-effect">
                <a href="{{ post.url }}">
                    <p> {{ post.title }}</p>
                </a>
                {% if post.date %}
                    <time class="floe-date" datetime="{{ post.date | isoDate }}">{{ post.date | dateFilter }}</time>
                {% endif %}
                {% if post.excerpt %}
                    <p>{{ post.excerpt }}</p>
                {% endif %}
            </li>
        {% endfor %}
    </ul>
{% endblock %}
