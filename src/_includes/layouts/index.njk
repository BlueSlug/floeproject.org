{% extends "layouts/base.njk" %}

{% set pageType = "page-index" %}

{% block content %}
    <div id="content" class="index-content">
        <div class="floe-description">
            {{ content | safe }}
            {% svg_sprite "fleur" %}
        </div>

        <section class="news">
            <h2>News</h2>
            {% include "partials/components/latest-news.njk" %}
            <div class="more-link"><span><a href="/news/">Other news items</a></span></div>
        </section>

        <section class="featured-projects">
            <h2>Featured Projects</h2>
            <span class="grid-layout">
            {% for project in collections.featured %}
                {{ project.templateContent | markdown | safe }}
            {% endfor %}
            </span>
            <div class="more-link"><span><a href="#">See more projects</a></span></div>
        </section>
    </div>
{% endblock %}
