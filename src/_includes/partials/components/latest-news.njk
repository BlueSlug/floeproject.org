<ul class="posts posts-news">
    {% for post in collections.news | limit(3) %}
        <li class="post corner-effect">
            <a href="{{ post.url }}">
                <p> {{ post.data.title }}</p>
            </a>
            {% if post.date %}
                <time class="floe-date" datetime="{{ post.date | isoDate }}">{{ post.date | dateFilter }}</time>
            {% endif %}
            {% if post.data.excerpt %}
                <p>{{ post.data.excerpt }}</p>
            {% endif %}
        </li>
    {% endfor %}
</ul>
